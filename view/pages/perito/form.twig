{% extends "layout/layoutMaster.twig" %}

{% block title %}{{ titulo }}{% endblock %}

{% block body %}

<div class="content-body">
    
    <!-- row -->
    <div class="container-fluid">
        <div class="page-titles">
            <div class="d-flex flex-wrap align-items-center justify-content-between">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ DOMAIN }}">Home</a></li>
                    <li class="breadcrumb-item"><a href="{{ DOMAIN }}/perito">Peritos</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0);">{{ titulo }}</a></li>
                </ol>
                <a href="{{ DOMAIN }}/perito" class="btn btn-secondary">
                    <i class="fa fa-arrow-left me-2"></i>Voltar
                </a>
            </div>
        </div>

        <form id="formPerito" method="POST">
            {% if action == 'editar' %}
                <input type="hidden" name="id" value="{{ perito.id }}">
            {% endif %}
            
            <div class="row">
                <div class="col-12 col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">{{ titulo }}</h4>
                        </div>
                        <div class="card-body">
                            <h5 class="mb-4">Dados Pessoais</h5>
                            <div class="row">
                                <div class="col-12 col-md-6 mb-3">
                                    <label class="form-label">Nome Completo <span class="text-danger">*</span></label>
                                    <input type="text" 
                                           class="form-control" 
                                           name="nome" 
                                           value="{{ action == 'editar' ? perito.nome : '' }}"
                                           required>
                                </div>
                                <div class="col-12 col-md-3 mb-3">
                                    <label class="form-label">Tipo de Documento</label>
                                    <select class="form-control" id="tipo_documento" name="tipo_documento">
                                        {% set isCNPJ = (action == 'editar' and perito.tipo_documento == 'CNPJ') %}
                                        <option value="CPF" {{ not isCNPJ ? 'selected' : '' }}>CPF</option>
                                        <option value="CNPJ" {{ isCNPJ ? 'selected' : '' }}>CNPJ</option>
                                    </select>
                                </div>
                                <div class="col-12 col-md-3 mb-3">
                                    <label class="form-label">CPF/CNPJ</label>
                                    <input type="text" 
                                           class="form-control" 
                                           id="documento"
                                           name="documento" 
                                           value="{{ action == 'editar' ? perito.documento : '' }}"
                                           placeholder="000.000.000-00">
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-12 col-md-6 mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" 
                                           class="form-control" 
                                           name="email" 
                                           value="{{ action == 'editar' ? perito.email : '' }}">
                                </div>
                                <div class="col-12 col-md-6 mb-3">
                                    <label class="form-label">Telefone</label>
                                    <input type="text" 
                                           class="form-control" 
                                           name="telefone" 
                                           value="{{ action == 'editar' ? perito.telefone : '' }}"
                                           placeholder="(11) 99999-9999">
                                </div>
                            </div>

                            <hr class="my-4">

                            <h5 class="mb-4">Dados Profissionais</h5>
                            <div class="row">
                                <div class="col-12 col-md-6 mb-3">
                                    <label class="form-label">Especialidade</label>
                                    <input type="text" 
                                           class="form-control" 
                                           name="especialidade" 
                                           value="{{ action == 'editar' ? perito.especialidade : '' }}"
                                           placeholder="Ex: Perícia Médica, Perícia Jurídica, Engenharia">
                                </div>
                                <div class="col-12 col-md-6 mb-3">
                                    <label class="form-label">Tipo de Registro</label>
                                    <select class="form-control" name="tipo_registro">
                                        <option value="">Selecione</option>
                                        <option value="CRM" {{ (action == 'editar' and perito.tipo_registro == 'CRM') ? 'selected' : '' }}>CRM - Conselho Regional de Medicina</option>
                                        <option value="OAB" {{ (action == 'editar' and perito.tipo_registro == 'OAB') ? 'selected' : '' }}>OAB - Ordem dos Advogados do Brasil</option>
                                        <option value="CREA" {{ (action == 'editar' and perito.tipo_registro == 'CREA') ? 'selected' : '' }}>CREA - Conselho Regional de Engenharia</option>
                                        <option value="CRP" {{ (action == 'editar' and perito.tipo_registro == 'CRP') ? 'selected' : '' }}>CRP - Conselho Regional de Psicologia</option>
                                        <option value="Outro" {{ (action == 'editar' and perito.tipo_registro == 'Outro') ? 'selected' : '' }}>Outro</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 col-md-6 mb-3">
                                    <label class="form-label">Registro Profissional</label>
                                    <input type="text" 
                                           class="form-control" 
                                           name="registro_profissional" 
                                           value="{{ action == 'editar' ? perito.registro_profissional : '' }}"
                                           placeholder="Número do registro profissional">
                                </div>
                                <div class="col-12 col-md-6 mb-3">
                                    <label class="form-label">Status <span class="text-danger">*</span></label>
                                    <select class="form-control" name="status" required>
                                        <option value="Ativo" {{ (action == 'editar' and perito.status == 'Ativo') ? 'selected' : 'selected' }}>Ativo</option>
                                        <option value="Inativo" {{ (action == 'editar' and perito.status == 'Inativo') ? 'selected' : '' }}>Inativo</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 mb-3">
                                    <label class="form-label">Observações</label>
                                    <textarea class="form-control" 
                                              name="observacoes" 
                                              rows="4"
                                              placeholder="Informações adicionais sobre o perito...">{{ action == 'editar' ? perito.observacoes : '' }}</textarea>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-save me-2"></i>
                                        {{ action == 'criar' ? 'Criar Perito' : 'Atualizar Perito' }}
                                    </button>
                                    <a href="{{ DOMAIN }}/perito" class="btn btn-secondary ms-2">
                                        <i class="fa fa-times me-2"></i>Cancelar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-12 col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Informações</h4>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info">
                                <h6><i class="fa fa-info-circle me-2"></i>Dados Obrigatórios</h6>
                                <ul class="mb-0">
                                    <li>Nome completo</li>
                                    <li>Status</li>
                                </ul>
                            </div>
                            
                            {% if action == 'editar' %}
                            <div class="alert alert-success">
                                <h6><i class="fa fa-user me-2"></i>Dados do Perito</h6>
                                <ul class="mb-0">
                                    <li><strong>ID:</strong> {{ perito.id }}</li>
                                    <li><strong>Status:</strong> 
                                        <span class="badge bg-{{ perito.status == 'Ativo' ? 'success' : 'danger' }}">
                                            {{ perito.status }}
                                        </span>
                                    </li>
                                    <li><strong>Criado em:</strong> {{ perito.data_create|date("d/m/Y H:i") }}</li>
                                </ul>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

{% endblock %}

{% block scripts %}
<script>
    // Define DOMAIN globalmente para uso no JS externo
    window.DOMAIN = '{{ DOMAIN }}';
</script>
<script src="{{ PATH }}/view/assets/js/pages/perito-form.js"></script>
{% endblock %}

