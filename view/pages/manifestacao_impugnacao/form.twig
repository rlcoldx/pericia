{% extends "layout/layoutMaster.twig" %}

{% block title %}{{ titulo }}{% endblock %}

{% block body %}

<div class="content-body">
    <div class="container-fluid">
        <div class="page-titles">
            <div class="d-flex flex-wrap align-items-center justify-content-between">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ DOMAIN }}">Home</a></li>
                    <li class="breadcrumb-item"><a href="{{ DOMAIN }}/manifestacoes-impugnacoes">Manifestações e Impugnações</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">{{ titulo }}</a></li>
                </ol>
                <a href="{{ DOMAIN }}/manifestacoes-impugnacoes" class="btn btn-secondary">
                    <i class="fa fa-arrow-left me-2"></i>Voltar
                </a>
            </div>
        </div>

        <form id="formManifestacao" method="POST">
            {% if action == 'editar' %}
                <input type="hidden" name="id" value="{{ manifestacao.id }}">
            {% endif %}

            <div class="row">
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h4 class="card-title mb-0">
                                <i class="fa fa-file-contract me-2"></i>Dados da Manifestação
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Data <span class="text-danger">*</span></label>
                                    <input type="date"
                                           class="form-control"
                                           name="data"
                                           value="{{ action == 'editar' ? manifestacao.data : '' }}"
                                           required>
                                </div>

                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Tipo <span class="text-danger">*</span></label>
                                    <select class="form-control select2-tipo" name="tipo" id="tipo" required>
                                        {% if action == 'editar' and manifestacao.tipo %}
                                            <option value="{{ manifestacao.tipo }}" selected>{{ manifestacao.tipo }}</option>
                                        {% endif %}
                                        {% if tipos is defined and tipos is not empty %}
                                            {% for tipo in tipos %}
                                                {% if action != 'editar' or manifestacao.tipo != tipo.tipo %}
                                                    <option value="{{ tipo.tipo }}">{{ tipo.tipo }}</option>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}
                                    </select>
                                </div>

                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">N°</label>
                                    <input type="text"
                                           class="form-control"
                                           name="numero"
                                           value="{{ action == 'editar' ? manifestacao.numero : '' }}"
                                           placeholder="Número">
                                </div>

                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Reclamada</label>
                                    <select class="form-control" name="reclamada_id" id="reclamada_id">
                                        <option value="">Selecione a Reclamada</option>
                                        {% for reclamada in reclamadas %}
                                        <option value="{{ reclamada.id }}" {{ action == 'editar' and manifestacao.reclamada_id == reclamada.id ? 'selected' : '' }}>
                                            {{ reclamada.nome }}
                                        </option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Reclamante</label>
                                    <select class="form-control" name="reclamante_id" id="reclamante_id">
                                        <option value="">Selecione o Reclamante</option>
                                        {% for reclamante in reclamantes %}
                                        <option value="{{ reclamante.id }}" {{ action == 'editar' and manifestacao.reclamante_id == reclamante.id ? 'selected' : '' }}>
                                            {{ reclamante.nome }}
                                        </option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Situação</label>
                                    <select class="form-control" name="favoravel">
                                        <option value="">Selecione</option>
                                        <option value="Favorável" {{ action == 'editar' and manifestacao.favoravel == 'Favorável' ? 'selected' : '' }}>Favorável</option>
                                        <option value="Desfavorável" {{ action == 'editar' and manifestacao.favoravel == 'Desfavorável' ? 'selected' : '' }}>Desfavorável</option>
                                        <option value="Parcialmente Favorável" {{ action == 'editar' and manifestacao.favoravel == 'Parcialmente Favorável' ? 'selected' : '' }}>Parcialmente Favorável</option>
                                    </select>
                                </div>

                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Perito</label>
                                    <select class="form-control select2" name="perito_id" id="perito_id">
                                        <option value="">Selecione o Perito</option>
                                        {% for perito in peritos %}
                                        <option value="{{ perito.id }}" {{ action == 'editar' and manifestacao.perito_id == perito.id ? 'selected' : '' }}>
                                            {{ perito.nome }}
                                        </option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <div class="col-12 mb-3">
                                    <label class="form-label">Função / Observação</label>
                                    <textarea class="form-control"
                                              name="funcao_observacao"
                                              rows="4"
                                              placeholder="Função ou observações sobre a manifestação/impugnação">{{ action == 'editar' ? manifestacao.funcao_observacao : '' }}</textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header">
                            <div class="d-flex justify-content-between flex-wrap align-items-center w-100">
                                <h4 class="card-title mb-0">
                                    <i class="fa fa-tasks me-2"></i>Tarefas
                                </h4>
                                <span>Aqui você pode definir qual usuário será responsável pela próxima tarefa e a data prevista para conclusão da tarefa</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-12 col-lg-3 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="tarefa_concluido"
                                               name="tarefa_concluido"
                                               value="1"
                                               {{ action == 'editar' and tarefa and tarefa.concluido ? 'checked' : '' }}>
                                        <label class="form-check-label" for="tarefa_concluido">
                                            <strong>Marcar como concluído</strong>
                                        </label>
                                    </div>
                                    <input type="date"
                                           class="form-control"
                                           name="tarefa_data_conclusao"
                                           id="tarefa_data_conclusao"
                                           value="{{ action == 'editar' and tarefa and tarefa.data_conclusao ? tarefa.data_conclusao : '' }}">
                                    <div class="form-text">Data prevista para conclusão da próxima tarefa</div>
                                </div>

                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Usuário Responsável</label>
                                    <select class="form-control" name="tarefa_usuario_responsavel_id" id="tarefa_usuario_responsavel_id">
                                        <option value="">Selecione o usuário responsável</option>
                                        {% for usuario in usuarios %}
                                        <option value="{{ usuario.id }}" {{ action == 'editar' and tarefa and tarefa.usuario_responsavel_id == usuario.id ? 'selected' : '' }}>
                                            {{ usuario.nome }}
                                        </option>
                                        {% endfor %}
                                    </select>
                                    <div class="form-text">Usuário que será responsável pela próxima tarefa</div>
                                </div>

                                <div class="col-12 col-lg-6 mb-3">
                                    <label class="form-label">Descrição da Tarefa</label>
                                    <textarea class="form-control"
                                              name="tarefa_texto"
                                              rows="1">{{ action == 'editar' ? tarefa.tarefa_texto : '' }}</textarea>
                                    <div class="form-text">Descrição da tarefa que será exibida para o usuário responsável</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save me-2"></i>
                                {{ action == 'criar' ? 'Cadastrar Manifestação' : 'Salvar Alterações' }}
                            </button>
                            <a href="{{ DOMAIN }}/manifestacoes-impugnacoes" class="btn btn-secondary ms-2">
                                <i class="fa fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

{% endblock %}

{% block scripts %}
<script>
    window.DOMAIN = '{{ DOMAIN }}';

    (function() {
        'use strict';

        // Inicializar Select2 para Tipo com tags (criar/buscar) e uppercase
        const tipoSelect = $('#tipo');
        tipoSelect.select2({
            tags: true,
            placeholder: 'Selecione ou digite um tipo',
            allowClear: true,
            width: '100%',
            language: {
                noResults: function() {
                    return "Digite para criar um novo";
                },
                searching: function() {
                    return "Buscando...";
                }
            }
        });

        // Forçar uppercase ao criar novo valor
        tipoSelect.on('select2:select', function (e) {
            const data = e.params.data;
            if (data && data.id && data.element === undefined) {
                const upper = data.id.toUpperCase();
                const newOption = new Option(upper, upper, true, true);
                tipoSelect.append(newOption).trigger('change');
            }
        });

        // Inicializar Select2 para Perito com busca
        $(document).ready(function() {
            $('#perito_id').select2({
                placeholder: 'Selecione o Perito',
                allowClear: true,
                width: '100%',
                language: {
                    noResults: function() {
                        return "Nenhum perito encontrado";
                    },
                    searching: function() {
                        return "Buscando...";
                    }
                }
            });

            // Inicializar Select2 para Reclamada com tags (permite criar novos)
            $('#reclamada_id').select2({
                tags: true,
                placeholder: 'Selecione ou digite para criar um novo',
                allowClear: true,
                width: '100%',
                language: {
                    noResults: function() {
                        return "Digite para criar um novo";
                    },
                    searching: function() {
                        return "Buscando...";
                    }
                }
            });

            // Inicializar Select2 para Reclamante com tags (permite criar novos)
            $('#reclamante_id').select2({
                tags: true,
                placeholder: 'Selecione ou digite para criar um novo',
                allowClear: true,
                width: '100%',
                language: {
                    noResults: function() {
                        return "Digite para criar um novo";
                    },
                    searching: function() {
                        return "Buscando...";
                    }
                }
            });

            // Select2 para Usuário Responsável (Tarefas)
            $('#tarefa_usuario_responsavel_id').select2({
                placeholder: 'Selecione o usuário responsável',
                allowClear: true,
                width: '100%',
                language: {
                    noResults: function() {
                        return "Nenhum usuário encontrado";
                    },
                    searching: function() {
                        return "Buscando...";
                    }
                }
            });
        });

        /**
         * Cria um reclamante/reclamada rapidamente via AJAX
         */
        async function criarRapido(tipo, nome) {
            const endpoint = tipo === 'reclamante' 
                ? window.DOMAIN + '/reclamantes/criar-rapido'
                : window.DOMAIN + '/reclamadas/criar-rapido';
            
            const formData = new FormData();
            formData.append('nome', nome);

            try {
                const response = await fetch(endpoint, {
                    method: 'POST',
                    body: formData
                });
                const data = await response.json();
                
                if (data.success) {
                    return { success: true, id: data.id, nome: data.nome };
                } else {
                    throw new Error(data.message || 'Erro ao criar ' + tipo);
                }
            } catch (error) {
                console.error('Erro ao criar ' + tipo + ':', error);
                throw error;
            }
        }

        /**
         * Verifica se um valor existe nas opções do select
         */
        function valorExisteNoSelect(selectId, valor) {
            if (!valor || valor === '') {
                return false;
            }
            
            const select = document.getElementById(selectId);
            if (!select) return false;
            
            // Se o valor é um número, verificar se existe nas opções
            const valorInt = parseInt(valor);
            if (!isNaN(valorInt)) {
                // É um número, verificar se existe nas opções
                for (let option of select.options) {
                    if (parseInt(option.value) === valorInt) {
                        return true;
                    }
                }
                return false;
            }
            
            // Se não é um número, é um novo valor (texto digitado)
            return false;
        }

        const form = document.getElementById('formManifestacao');
        if (!form) return;

        form.addEventListener('submit', async function(e) {
            e.preventDefault();

            const submitBtn = form.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fa fa-spinner fa-spin me-2"></i>Salvando...';
            submitBtn.disabled = true;

            try {
                // Verificar se Reclamante é novo e criar se necessário
                const reclamanteSelect = $('#reclamante_id');
                let reclamanteId = reclamanteSelect.val();
                
                // Se for array (Select2 pode retornar array), pegar o primeiro valor
                if (Array.isArray(reclamanteId)) {
                    reclamanteId = reclamanteId[0];
                }
                
                let reclamanteIdFinal = reclamanteId;
                
                // Se o valor não existe nas opções do select ou não é um número, é um novo valor
                if (reclamanteId && (!valorExisteNoSelect('reclamante_id', reclamanteId) || isNaN(parseInt(reclamanteId)))) {
                    try {
                        const resultado = await criarRapido('reclamante', reclamanteId);
                        reclamanteIdFinal = resultado.id.toString();
                        
                        // Remover a opção temporária (texto) se existir
                        reclamanteSelect.find('option').each(function() {
                            const optionValue = $(this).val();
                            // Se o valor da opção é o texto digitado (não é um número)
                            if (optionValue === reclamanteId && isNaN(parseInt(optionValue))) {
                                $(this).remove();
                            }
                        });
                        
                        // Verificar se a opção com o ID já existe antes de adicionar
                        let optionExists = false;
                        reclamanteSelect.find('option').each(function() {
                            if (parseInt($(this).val()) === resultado.id) {
                                optionExists = true;
                                return false; // break
                            }
                        });
                        
                        if (!optionExists) {
                            // Adicionar a nova opção com ID
                            const newOption = new Option(resultado.nome, resultado.id, true, true);
                            reclamanteSelect.append(newOption);
                        }
                        
                        // Forçar atualização do Select2 com o ID correto
                        reclamanteSelect.val(resultado.id).trigger('change.select2');
                        
                        // Aguardar um pouco para garantir que o Select2 atualizou
                        await new Promise(resolve => setTimeout(resolve, 100));
                    } catch (error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Erro!',
                            text: 'Erro ao criar reclamante: ' + error.message
                        });
                        submitBtn.innerHTML = originalText;
                        submitBtn.disabled = false;
                        return;
                    }
                }

                // Verificar se Reclamada é nova e criar se necessário
                const reclamadaSelect = $('#reclamada_id');
                let reclamadaId = reclamadaSelect.val();
                
                // Se for array (Select2 pode retornar array), pegar o primeiro valor
                if (Array.isArray(reclamadaId)) {
                    reclamadaId = reclamadaId[0];
                }
                
                let reclamadaIdFinal = reclamadaId;
                
                // Se o valor não existe nas opções do select ou não é um número, é um novo valor
                if (reclamadaId && (!valorExisteNoSelect('reclamada_id', reclamadaId) || isNaN(parseInt(reclamadaId)))) {
                    try {
                        const resultado = await criarRapido('reclamada', reclamadaId);
                        reclamadaIdFinal = resultado.id.toString();
                        
                        // Remover a opção temporária (texto) se existir
                        reclamadaSelect.find('option').each(function() {
                            const optionValue = $(this).val();
                            // Se o valor da opção é o texto digitado (não é um número)
                            if (optionValue === reclamadaId && isNaN(parseInt(optionValue))) {
                                $(this).remove();
                            }
                        });
                        
                        // Verificar se a opção com o ID já existe antes de adicionar
                        let optionExists = false;
                        reclamadaSelect.find('option').each(function() {
                            if (parseInt($(this).val()) === resultado.id) {
                                optionExists = true;
                                return false; // break
                            }
                        });
                        
                        if (!optionExists) {
                            // Adicionar a nova opção com ID
                            const newOption = new Option(resultado.nome, resultado.id, true, true);
                            reclamadaSelect.append(newOption);
                        }
                        
                        // Forçar atualização do Select2 com o ID correto
                        reclamadaSelect.val(resultado.id).trigger('change.select2');
                        
                        // Aguardar um pouco para garantir que o Select2 atualizou
                        await new Promise(resolve => setTimeout(resolve, 100));
                    } catch (error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Erro!',
                            text: 'Erro ao criar reclamada: ' + error.message
                        });
                        submitBtn.innerHTML = originalText;
                        submitBtn.disabled = false;
                        return;
                    }
                }

                // Garantir que os valores finais estão corretos nos selects
                reclamanteSelect.val(reclamanteIdFinal).trigger('change.select2');
                reclamadaSelect.val(reclamadaIdFinal).trigger('change.select2');

                // Aguardar um pouco para o Select2 atualizar completamente
                await new Promise(resolve => setTimeout(resolve, 200));

                // Obter os valores finais novamente dos selects (garantir que estão atualizados)
                let reclamanteIdFinalVerificado = reclamanteSelect.val();
                let reclamadaIdFinalVerificado = reclamadaSelect.val();
                
                // Se for array, pegar o primeiro valor
                if (Array.isArray(reclamanteIdFinalVerificado)) {
                    reclamanteIdFinalVerificado = reclamanteIdFinalVerificado[0];
                }
                if (Array.isArray(reclamadaIdFinalVerificado)) {
                    reclamadaIdFinalVerificado = reclamadaIdFinalVerificado[0];
                }

                const formData = new FormData(form);
                
                // Garantir que os IDs corretos estão no formData (não o texto)
                // Converter para número para garantir que é um ID válido
                const reclamanteIdNum = parseInt(reclamanteIdFinalVerificado);
                const reclamadaIdNum = parseInt(reclamadaIdFinalVerificado);
                
                // Se os campos não são obrigatórios, permitir valores vazios
                if (reclamanteIdFinalVerificado && !isNaN(reclamanteIdNum)) {
                    formData.set('reclamante_id', reclamanteIdNum);
                }
                if (reclamadaIdFinalVerificado && !isNaN(reclamadaIdNum)) {
                    formData.set('reclamada_id', reclamadaIdNum);
                }

                const isEdit = !!form.querySelector('input[name="id"]');
                const url = window.DOMAIN + (isEdit ? '/manifestacoes-impugnacoes/editar/save' : '/manifestacoes-impugnacoes/add/save');

                const response = await fetch(url, {
                    method: 'POST',
                    body: formData
                });
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Sucesso!',
                        text: data.message,
                        timer: 2000,
                        showConfirmButton: false
                    }).then(() => {
                        window.location.href = window.DOMAIN + '/manifestacoes-impugnacoes';
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Erro!',
                        text: data.message
                    });
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }
            } catch (error) {
                console.error('Erro:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Erro!',
                    text: 'Ocorreu um erro ao salvar a manifestação/impugnação. Verifique o console do navegador (F12) para mais detalhes.'
                });
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }
        });
    })();
</script>
{% endblock %}
