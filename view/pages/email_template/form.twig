{% extends "layout/layoutMaster.twig" %}

{% block title %}{{ titulo }}{% endblock %}

{% block body %}

<div class="content-body">
    <div class="container-fluid">
        <div class="page-titles">
            <div class="d-flex flex-wrap align-items-center justify-content-between">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ DOMAIN }}">Home</a></li>
                    <li class="breadcrumb-item"><a href="{{ DOMAIN }}/email-templates">Templates de E-mail</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">{{ titulo }}</a></li>
                </ol>
                <a href="{{ DOMAIN }}/email-templates" class="btn btn-secondary">
                    <i class="fa fa-arrow-left me-2"></i>Voltar
                </a>
            </div>
        </div>

        <form id="formTemplate" method="POST">
            {% if action == 'editar' %}
                <input type="hidden" name="id" value="{{ template.id }}">
            {% endif %}

            <div class="row">
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h4 class="card-title mb-0">
                                <i class="fa fa-envelope me-2"></i>Dados do Template
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12 col-lg-6 mb-3">
                                    <label class="form-label">Tipo <span class="text-danger">*</span></label>
                                    {% if action == 'criar' %}
                                    <select class="form-control" name="tipo" id="tipo" required>
                                        <option value="">Selecione o tipo</option>
                                        {% for key, label in tipos %}
                                        <option value="{{ key }}">{{ label }}</option>
                                        {% endfor %}
                                    </select>
                                    {% else %}
                                    <input type="text" class="form-control" value="{{ template.tipo }}" disabled>
                                    <input type="hidden" name="tipo" value="{{ template.tipo }}">
                                    {% endif %}
                                </div>

                                <div class="col-12 col-lg-6 mb-3">
                                    <label class="form-label">Status</label>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" name="ativo" id="ativo" 
                                               {{ action == 'editar' and template.ativo ? 'checked' : '' }}>
                                        <label class="form-check-label" for="ativo">Ativo</label>
                                    </div>
                                </div>

                                <div class="col-12 mb-3">
                                    <label class="form-label">Assunto <span class="text-danger">*</span></label>
                                    <input type="text" 
                                           class="form-control" 
                                           name="assunto" 
                                           id="assunto"
                                           value="{{ action == 'editar' ? template.assunto : '' }}"
                                           placeholder="Ex: Novo Quesito Criado"
                                           required>
                                    <small class="form-text">Variáveis disponíveis: {{ '{{titulo}}' }}, {{ '{{modulo}}' }}, {{ '{{acao}}' }}, etc.</small>
                                </div>

                                <div class="col-12 mb-3">
                                    <label class="form-label">Corpo do E-mail <span class="text-danger">*</span></label>
                                    <div class="position-relative">
                                        <textarea class="form-control" 
                                                  name="corpo" 
                                                  id="corpo"
                                                  rows="20"
                                                  placeholder="Digite o HTML completo do e-mail aqui..."
                                                  required style="font-family: 'Courier New', monospace; font-size: 13px;">{{ action == 'editar' ? template.corpo : '' }}</textarea>
                                    </div>
                                    <small class="form-text">Variáveis disponíveis: {{ '{{titulo}}' }}, {{ '{{modulo}}' }}, {{ '{{acao}}' }}, {{ '{{detalhes}}' }}, {{ '{{mensagem}}' }}, {{ '{{url}}' }}</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save me-2"></i>
                                {{ action == 'criar' ? 'Criar Template' : 'Salvar Alterações' }}
                            </button>
                            <a href="{{ DOMAIN }}/email-templates" class="btn btn-secondary ms-2">
                                <i class="fa fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

{% endblock %}

{% block scripts %}
<!-- CodeMirror CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/codemirror.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/theme/monokai.min.css" />

<!-- CodeMirror JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/codemirror.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/mode/xml/xml.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/mode/htmlmixed/htmlmixed.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/mode/css/css.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/mode/javascript/javascript.min.js"></script>

<style>
    .CodeMirror {
        border: 1px solid #ddd;
        border-radius: 4px;
        height: 600px;
        font-size: 13px;
        font-family: 'Courier New', monospace;
    }
    .CodeMirror-scroll {
        min-height: 600px;
    }
</style>

<script>
    window.DOMAIN = '{{ DOMAIN }}';

    jQuery(document).ready(function($) {
        'use strict';

        // Inicializar CodeMirror Editor
        let editorInstance = null;
        const editorElement = document.getElementById('corpo');
        
        if (typeof CodeMirror !== 'undefined' && editorElement) {
            try {
                editorInstance = CodeMirror.fromTextArea(editorElement, {
                    mode: 'htmlmixed',
                    theme: 'monokai',
                    lineNumbers: true,
                    lineWrapping: true,
                    indentUnit: 2,
                    indentWithTabs: false,
                    autoCloseTags: true,
                    autoCloseBrackets: true,
                    matchBrackets: true,
                    matchTags: {bothTags: true},
                    foldGutter: true,
                    gutters: ['CodeMirror-linenumbers', 'CodeMirror-foldgutter'],
                    extraKeys: {
                        'Ctrl-Space': 'autocomplete',
                        'Ctrl-J': 'toMatchingTag',
                        'Ctrl-/': 'toggleComment'
                    }
                });

                // Atualizar o textarea quando o editor mudar
                editorInstance.on('change', function(cm) {
                    cm.save();
                });

                console.log('CodeMirror Editor inicializado com sucesso');
            } catch (error) {
                console.error('Erro ao inicializar CodeMirror Editor:', error);
            }
        } else {
            console.error('CodeMirror não está disponível ou elemento não encontrado');
        }

        const form = document.getElementById('formTemplate');
        if (!form) return;

        form.addEventListener('submit', function(e) {
            e.preventDefault();

            // Garantir que o conteúdo do editor seja salvo no textarea antes do submit
            if (editorInstance) {
                try {
                    editorInstance.save();
                } catch (error) {
                    console.error('Erro ao salvar conteúdo do editor:', error);
                }
            }

            const submitBtn = form.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fa fa-spinner fa-spin me-2"></i>Salvando...';
            submitBtn.disabled = true;

            const formData = new FormData(form);
            const isEdit = !!form.querySelector('input[name="id"]');
            const url = window.DOMAIN + (isEdit ? '/email-templates/editar/save' : '/email-templates/add/save');

            fetch(url, {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Sucesso!',
                        text: data.message,
                        timer: 2000,
                        showConfirmButton: false
                    }).then(() => {
                        window.location.href = window.DOMAIN + '/email-templates';
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Erro!',
                        text: data.message
                    });
                }
            })
            .catch(error => {
                console.error('Erro:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Erro!',
                    text: 'Ocorreu um erro ao salvar o template.'
                });
            })
            .finally(() => {
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            });
        });
    });
</script>
{% endblock %}
