{% extends "layout/layoutMaster.twig" %}

{% block title %}Templates de E-mail{% endblock %}

{% block body %}

<div class="content-body">
    <div class="container-fluid">
        <div class="page-titles">
            <div class="d-flex flex-wrap align-items-center justify-content-between">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ DOMAIN }}">Home</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Templates de E-mail</a></li>
                </ol>
                <div class="d-flex gap-2">
                    {% if 'email_template_gerenciar'|verifyPermission %}
                    <button type="button" id="btnAtivarTodos" class="btn btn-success">
                        <i class="fa fa-check-circle me-2"></i>Ativar Todos os Emails
                    </button>
                    <button type="button" id="btnDesativarTodos" class="btn btn-danger">
                        <i class="fa fa-times-circle me-2"></i>Desativar Todos os Emails
                    </button>
                    {% endif %}
                    {% if 'email_template_criar'|verifyPermission %}
                    <a href="{{ DOMAIN }}/email-templates/add" class="btn btn-primary">
                        <i class="fa fa-plus me-2"></i>Novo Template
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Templates de E-mail</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="tabelaTemplates">
                                <thead>
                                    <tr>
                                        <th>Tipo</th>
                                        <th>Assunto</th>
                                        <th>Status</th>
                                        <th>Data Criação</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for template in templates %}
                                    <tr>
                                        <td>{{ template.tipo }}</td>
                                        <td>{{ template.assunto }}</td>
                                        <td>
                                            {% if template.ativo %}
                                                <span class="badge badge-success">Ativo</span>
                                            {% else %}
                                                <span class="badge badge-danger">Inativo</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ template.data_create|date('d/m/Y H:i') }}</td>
                                        <td>
                                            {% if 'email_template_gerenciar'|verifyPermission %}
                                            <a href="{{ DOMAIN }}/email-templates/editar/{{ template.id }}" class="btn btn-sm btn-primary">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger btnRemover" data-id="{{ template.id }}">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center">Nenhum template cadastrado</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block scripts %}
<script>
    window.DOMAIN = '{{ DOMAIN }}';

    (function() {
        'use strict';

        // Ativar todos os templates
        const btnAtivarTodos = document.getElementById('btnAtivarTodos');
        if (btnAtivarTodos) {
            btnAtivarTodos.addEventListener('click', function() {
                Swal.fire({
                    title: 'Ativar Todos os Templates?',
                    text: 'Todos os templates de e-mail serão ativados. Deseja continuar?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#28a745',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sim, ativar todos!',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        const btn = this;
                        const originalText = btn.innerHTML;
                        btn.innerHTML = '<i class="fa fa-spinner fa-spin me-2"></i>Ativando...';
                        btn.disabled = true;

                        fetch(window.DOMAIN + '/email-templates/ativar-todos', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                            }
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire('Sucesso!', data.message, 'success').then(() => {
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire('Erro!', data.message, 'error');
                            }
                        })
                        .catch(error => {
                            console.error('Erro:', error);
                            Swal.fire('Erro!', 'Erro ao ativar templates.', 'error');
                        })
                        .finally(() => {
                            btn.innerHTML = originalText;
                            btn.disabled = false;
                        });
                    }
                });
            });
        }

        // Desativar todos os templates
        const btnDesativarTodos = document.getElementById('btnDesativarTodos');
        if (btnDesativarTodos) {
            btnDesativarTodos.addEventListener('click', function() {
                Swal.fire({
                    title: 'Desativar Todos os Templates?',
                    text: 'Todos os templates de e-mail serão desativados. Nenhum e-mail será enviado. Deseja continuar?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#ffc107',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sim, desativar todos!',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        const btn = this;
                        const originalText = btn.innerHTML;
                        btn.innerHTML = '<i class="fa fa-spinner fa-spin me-2"></i>Desativando...';
                        btn.disabled = true;

                        fetch(window.DOMAIN + '/email-templates/desativar-todos', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                            }
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire('Sucesso!', data.message, 'success').then(() => {
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire('Erro!', data.message, 'error');
                            }
                        })
                        .catch(error => {
                            console.error('Erro:', error);
                            Swal.fire('Erro!', 'Erro ao desativar templates.', 'error');
                        })
                        .finally(() => {
                            btn.innerHTML = originalText;
                            btn.disabled = false;
                        });
                    }
                });
            });
        }

        // Remover template
        document.querySelectorAll('.btnRemover').forEach(btn => {
            btn.addEventListener('click', function() {
                const id = this.getAttribute('data-id');

                Swal.fire({
                    title: 'Tem certeza?',
                    text: 'Esta ação não pode ser desfeita!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Sim, remover!',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(window.DOMAIN + '/email-templates/remover/' + id, {
                            method: 'DELETE'
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire('Removido!', data.message, 'success').then(() => {
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire('Erro!', data.message, 'error');
                            }
                        })
                        .catch(error => {
                            console.error('Erro:', error);
                            Swal.fire('Erro!', 'Erro ao remover template.', 'error');
                        });
                    }
                });
            });
        });
    })();
</script>
{% endblock %}
