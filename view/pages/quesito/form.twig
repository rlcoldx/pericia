{% extends "layout/layoutMaster.twig" %}

{% block title %}{{ titulo }}{% endblock %}

{% block body %}

<div class="content-body">
    <div class="container-fluid">
        <div class="page-titles">
            <div class="d-flex flex-wrap align-items-center justify-content-between">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ DOMAIN }}">Home</a></li>
                    <li class="breadcrumb-item"><a href="{{ DOMAIN }}/quesitos">Quesitos</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">{{ titulo }}</a></li>
                </ol>
                <a href="{{ DOMAIN }}/quesitos" class="btn btn-secondary">
                    <i class="fa fa-arrow-left me-2"></i>Voltar
                </a>
            </div>
        </div>

        <form id="formQuesito" method="POST">
            {% if action == 'editar' %}
                <input type="hidden" name="id" value="{{ quesito.id }}">
            {% endif %}

            <div class="row">
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h4 class="card-title mb-0">
                                <i class="fa fa-file-alt me-2"></i>Dados do Quesito
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Data <span class="text-danger">*</span></label>
                                    <input type="date"
                                           class="form-control"
                                           name="data"
                                           value="{{ action == 'editar' ? quesito.data : '' }}"
                                           required>
                                </div>

                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Tipo <span class="text-danger">*</span></label>
                                    <select class="form-control select2-tipo" name="tipo" id="tipo" required>
                                        {% if action == 'editar' and quesito.tipo %}
                                            <option value="{{ quesito.tipo }}" selected>{{ quesito.tipo }}</option>
                                        {% endif %}
                                        {% if tipos is defined and tipos is not empty %}
                                            {% for tipo in tipos %}
                                                {% if action != 'editar' or quesito.tipo != tipo.tipo %}
                                                    <option value="{{ tipo.tipo }}">{{ tipo.tipo }}</option>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}
                                    </select>
                                </div>

                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Vara <span class="text-danger">*</span></label>
                                    <input type="text"
                                           class="form-control"
                                           name="vara"
                                           value="{{ action == 'editar' ? quesito.vara : '' }}"
                                           placeholder="Vara/Órgão"
                                           required>
                                </div>

                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Reclamante <span class="text-danger">*</span></label>
                                    <select class="form-control" name="reclamante_id" id="reclamante_id" required>
                                        <option value="">Selecione o Reclamante</option>
                                        {% for reclamante in reclamantes %}
                                        <option value="{{ reclamante.id }}" {{ action == 'editar' and quesito.reclamante_id == reclamante.id ? 'selected' : '' }}>
                                            {{ reclamante.nome }}
                                        </option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Código Reclamante (opcional)</label>
                                    <input type="text"
                                           class="form-control"
                                           name="codigo_reclamante"
                                           value="{{ action == 'editar' ? quesito.codigo_reclamante : '' }}"
                                           placeholder="Código interno do reclamante">
                                </div>

                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Reclamada <span class="text-danger">*</span></label>
                                    <select class="form-control" name="reclamada_id" id="reclamada_id" required>
                                        <option value="">Selecione a Reclamada</option>
                                        {% for reclamada in reclamadas %}
                                        <option value="{{ reclamada.id }}" {{ action == 'editar' and quesito.reclamada_id == reclamada.id ? 'selected' : '' }}>
                                            {{ reclamada.nome }}
                                        </option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <div class="col-12 col-lg-6 mb-3">
                                    <label class="form-label">Link da Pasta do Drive</label>
                                    <input type="url"
                                           class="form-control"
                                           name="link_pasta_drive"
                                           value="{{ action == 'editar' ? quesito.link_pasta_drive : '' }}"
                                           placeholder="https://drive.google.com/....">
                                </div>

                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Email do Cliente</label>
                                    <input type="email"
                                           class="form-control"
                                           name="email_cliente"
                                           value="{{ action == 'editar' ? quesito.email_cliente : '' }}"
                                           placeholder="cliente@exemplo.com">
                                </div>

                                <div class="col-12 col-lg-6 mb-3">
                                    <label class="form-label">Emails CC (Cópia)</label>
                                    <input type="text"
                                           class="form-control"
                                           name="email_cliente_cc"
                                           id="email_cliente_cc"
                                           data-role="tagsinput"
                                           value="{{ action == 'editar' and quesito.email_cliente_cc ? quesito.email_cliente_cc : '' }}"
                                           placeholder="Digite os emails separados por vírgula">
                                </div>

                                {% if action == 'editar' %}
                                <div class="col-12 col-lg-3 mb-3 d-flex align-items-end">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="enviar_para_cliente"
                                               name="enviar_para_cliente"
                                               {{ action == 'editar' and quesito.enviar_para_cliente ? 'checked' : '' }}>
                                        <label class="form-check-label" for="enviar_para_cliente">
                                            Enviar para o cliente
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Status</label>
                                    <select name="status" class="form-control">
                                        {% set currentStatus = quesito.status|default('Pendente') %}
                                        <option value="Pendente" {{ currentStatus == 'Pendente' ? 'selected' : '' }}>Pendente</option>
                                        <option value="Finalizado" {{ currentStatus == 'Finalizado' ? 'selected' : '' }}>Finalizado</option>
                                        <option value="Finalizado e Enviado" {{ currentStatus == 'Finalizado e Enviado' ? 'selected' : '' }}>Finalizado e Enviado</option>
                                        <option value="Pendente de Envio" {{ currentStatus == 'Pendente de Envio' ? 'selected' : '' }}>Pendente de Envio</option>
                                        <option value="Recusado" {{ currentStatus == 'Recusado' ? 'selected' : '' }}>Recusado</option>
                                    </select>
                                </div>
                                {% if action == 'editar' and quesito.email_cliente %}
                                <div class="col-12 mb-3">
                                    <div class="alert {{ quesito.email_cliente_enviado ? 'alert-success' : 'alert-warning' }} mb-0">
                                        <i class="fa {{ quesito.email_cliente_enviado ? 'fa-check-circle' : 'fa-clock' }} me-2"></i>
                                        <strong>Status do E-mail ao Cliente:</strong>
                                        {% if quesito.email_cliente_enviado %}
                                            <span>E-mail enviado em {{ quesito.email_cliente_data_envio|date('d/m/Y H:i') }}</span>
                                        {% else %}
                                            <span>E-mail pendente de envio</span>
                                        {% endif %}
                                    </div>
                                </div>
                                {% endif %}
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header">
                            <div class="d-flex justify-content-between flex-wrap align-items-center w-100">
                                <h4 class="card-title mb-0">
                                    <i class="fa fa-tasks me-2"></i>Tarefas
                                </h4>
                                <span>Aqui você pode definir qual usuário será responsável pela próxima tarefa e a data prevista para conclusão da tarefa</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-12 col-lg-3 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               id="tarefa_concluido"
                                               name="tarefa_concluido"
                                               value="1"
                                               {{ action == 'editar' and tarefa and tarefa.concluido ? 'checked' : '' }}>
                                        <label class="form-check-label" for="tarefa_concluido">
                                            <strong>Marcar como concluído</strong>
                                        </label>
                                    </div>
                                    <input type="date"
                                           class="form-control"
                                           name="tarefa_data_conclusao"
                                           id="tarefa_data_conclusao"
                                           value="{{ action == 'editar' and tarefa and tarefa.data_conclusao ? tarefa.data_conclusao : '' }}">
                                    <div class="form-text">Data prevista para conclusão da próxima tarefa</div>
                                </div>

                                <div class="col-12 col-lg-3 mb-3">
                                    <label class="form-label">Usuário Responsável</label>
                                    <select class="form-control" name="tarefa_usuario_responsavel_id" id="tarefa_usuario_responsavel_id">
                                        <option value="">Selecione o usuário responsável</option>
                                        {% for usuario in usuarios %}
                                        <option value="{{ usuario.id }}" {{ action == 'editar' and tarefa and tarefa.usuario_responsavel_id == usuario.id ? 'selected' : '' }}>
                                            {{ usuario.nome }}
                                        </option>
                                        {% endfor %}
                                    </select>
                                    <div class="form-text">Usuário que será responsável pela próxima tarefa</div>
                                </div>

                                <div class="col-12 col-lg-6 mb-3">
                                    <label class="form-label">Descrição da Tarefa</label>
                                    <textarea class="form-control"
                                              name="tarefa_texto"
                                              rows="1">{{ action == 'editar' ? tarefa.tarefa_texto : '' }}</textarea>
                                    <div class="form-text">Descrição da tarefa que será exibida para o usuário responsável</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save me-2"></i>
                                {{ action == 'criar' ? 'Cadastrar Quesito' : 'Salvar Alterações' }}
                            </button>
                            <a href="{{ DOMAIN }}/quesitos" class="btn btn-secondary ms-2">
                                <i class="fa fa-times me-2"></i>Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

{% endblock %}

{% block scripts %}
<script>
    window.DOMAIN = '{{ DOMAIN }}';

    (function() {
        'use strict';

        // Inicializar Select2 para Tipo com tags
        $(document).ready(function() {
            const tipoSelect = $('#tipo');
            tipoSelect.select2({
                tags: true,
                placeholder: 'Selecione ou digite um tipo',
                allowClear: true,
                width: '100%',
                language: {
                    noResults: function() {
                        return "Digite para criar um novo";
                    },
                    searching: function() {
                        return "Buscando...";
                    }
                }
            });

            // Força uppercase quando cria um novo valor
            tipoSelect.on('select2:select', function (e) {
                const data = e.params.data;
                if (data && data.id && data.element === undefined) {
                    const upper = data.id.toUpperCase();
                    const newOption = new Option(upper, upper, true, true);
                    tipoSelect.append(newOption).trigger('change');
                }
            });

            // Inicializar Select2 para Reclamada com tags (permite criar novos)
            $('#reclamada_id').select2({
                tags: true,
                placeholder: 'Selecione ou digite para criar um novo',
                allowClear: true,
                width: '100%',
                language: {
                    noResults: function() {
                        return "Digite para criar um novo";
                    },
                    searching: function() {
                        return "Buscando...";
                    }
                }
            });

            // Inicializar Select2 para Reclamante com tags (permite criar novos)
            $('#reclamante_id').select2({
                tags: true,
                placeholder: 'Selecione ou digite para criar um novo',
                allowClear: true,
                width: '100%',
                language: {
                    noResults: function() {
                        return "Digite para criar um novo";
                    },
                    searching: function() {
                        return "Buscando...";
                    }
                }
            });

            // Select2 para Usuário Responsável (Tarefas)
            $('#tarefa_usuario_responsavel_id').select2({
                placeholder: 'Selecione o usuário responsável',
                allowClear: true,
                width: '100%',
                language: {
                    noResults: function() {
                        return "Nenhum usuário encontrado";
                    },
                    searching: function() {
                        return "Buscando...";
                    }
                }
            });

            // Inicializar Bootstrap Tags Input para Emails CC
            $('#email_cliente_cc').tagsinput({
                trimValue: true,
                confirmKeys: [44], // Enter e vírgula
                tagClass: 'badge badge-primary'
            });

            // Validar email antes de adicionar tag
            $('#email_cliente_cc').on('beforeItemAdd', function(event) {
                const email = event.item.trim();
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                
                if (!emailRegex.test(email)) {
                    event.cancel = true;
                    Swal.fire({
                        icon: 'warning',
                        title: 'Email inválido',
                        text: 'Por favor, digite um email válido.',
                        timer: 2000,
                        showConfirmButton: false
                    });
                }
            });
        });

        /**
         * Cria um reclamante/reclamada rapidamente via AJAX
         */
        async function criarRapido(tipo, nome) {
            const endpoint = tipo === 'reclamante' 
                ? window.DOMAIN + '/reclamantes/criar-rapido'
                : window.DOMAIN + '/reclamadas/criar-rapido';
            
            const formData = new FormData();
            formData.append('nome', nome);

            try {
                const response = await fetch(endpoint, {
                    method: 'POST',
                    body: formData
                });
                const data = await response.json();
                
                if (data.success) {
                    return { success: true, id: data.id, nome: data.nome };
                } else {
                    throw new Error(data.message || 'Erro ao criar ' + tipo);
                }
            } catch (error) {
                console.error('Erro ao criar ' + tipo + ':', error);
                throw error;
            }
        }

        /**
         * Verifica se o valor selecionado é um novo (texto) ou um ID existente
         */
        function isNovoValor(valor) {
            if (!valor || valor === '') {
                return false;
            }
            // Se for um número inteiro, é um ID existente
            // Se for uma string não numérica, é um novo valor
            const valorInt = parseInt(valor);
            return isNaN(valorInt) || valorInt.toString() !== valor.toString();
        }

        /**
         * Verifica se um valor existe nas opções do select
         */
        function valorExisteNoSelect(selectId, valor) {
            if (!valor || valor === '') {
                return false;
            }
            
            const select = document.getElementById(selectId);
            if (!select) return false;
            
            // Se o valor é um número, verificar se existe nas opções
            const valorInt = parseInt(valor);
            if (!isNaN(valorInt)) {
                // É um número, verificar se existe nas opções
                for (let option of select.options) {
                    if (parseInt(option.value) === valorInt) {
                        return true;
                    }
                }
                return false;
            }
            
            // Se não é um número, é um novo valor (texto digitado)
            return false;
        }

        const form = document.getElementById('formQuesito');
        if (!form) return;

        form.addEventListener('submit', async function(e) {
            e.preventDefault();

            const submitBtn = form.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fa fa-spinner fa-spin me-2"></i>Salvando...';
            submitBtn.disabled = true;

            try {
                // Verificar se Reclamante é novo e criar se necessário
                const reclamanteSelect = $('#reclamante_id');
                let reclamanteId = reclamanteSelect.val();
                
                // Se for array (Select2 pode retornar array), pegar o primeiro valor
                if (Array.isArray(reclamanteId)) {
                    reclamanteId = reclamanteId[0];
                }
                
                let reclamanteIdFinal = reclamanteId;
                
                // Se o valor não existe nas opções do select ou não é um número, é um novo valor
                if (reclamanteId && (!valorExisteNoSelect('reclamante_id', reclamanteId) || isNaN(parseInt(reclamanteId)))) {
                    try {
                        const resultado = await criarRapido('reclamante', reclamanteId);
                        reclamanteIdFinal = resultado.id.toString();
                        
                        // Remover a opção temporária (texto) se existir
                        reclamanteSelect.find('option').each(function() {
                            const optionValue = $(this).val();
                            // Se o valor da opção é o texto digitado (não é um número)
                            if (optionValue === reclamanteId && isNaN(parseInt(optionValue))) {
                                $(this).remove();
                            }
                        });
                        
                        // Verificar se a opção com o ID já existe antes de adicionar
                        let optionExists = false;
                        reclamanteSelect.find('option').each(function() {
                            if (parseInt($(this).val()) === resultado.id) {
                                optionExists = true;
                                return false; // break
                            }
                        });
                        
                        if (!optionExists) {
                            // Adicionar a nova opção com ID
                            const newOption = new Option(resultado.nome, resultado.id, true, true);
                            reclamanteSelect.append(newOption);
                        }
                        
                        // Forçar atualização do Select2 com o ID correto
                        reclamanteSelect.val(resultado.id).trigger('change.select2');
                        
                        // Aguardar um pouco para garantir que o Select2 atualizou
                        await new Promise(resolve => setTimeout(resolve, 100));
                    } catch (error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Erro!',
                            text: 'Erro ao criar reclamante: ' + error.message
                        });
                        submitBtn.innerHTML = originalText;
                        submitBtn.disabled = false;
                        return;
                    }
                }

                // Verificar se Reclamada é nova e criar se necessário
                const reclamadaSelect = $('#reclamada_id');
                let reclamadaId = reclamadaSelect.val();
                
                // Se for array (Select2 pode retornar array), pegar o primeiro valor
                if (Array.isArray(reclamadaId)) {
                    reclamadaId = reclamadaId[0];
                }
                
                let reclamadaIdFinal = reclamadaId;
                
                // Se o valor não existe nas opções do select ou não é um número, é um novo valor
                if (reclamadaId && (!valorExisteNoSelect('reclamada_id', reclamadaId) || isNaN(parseInt(reclamadaId)))) {
                    try {
                        const resultado = await criarRapido('reclamada', reclamadaId);
                        reclamadaIdFinal = resultado.id.toString();
                        
                        // Remover a opção temporária (texto) se existir
                        reclamadaSelect.find('option').each(function() {
                            const optionValue = $(this).val();
                            // Se o valor da opção é o texto digitado (não é um número)
                            if (optionValue === reclamadaId && isNaN(parseInt(optionValue))) {
                                $(this).remove();
                            }
                        });
                        
                        // Verificar se a opção com o ID já existe antes de adicionar
                        let optionExists = false;
                        reclamadaSelect.find('option').each(function() {
                            if (parseInt($(this).val()) === resultado.id) {
                                optionExists = true;
                                return false; // break
                            }
                        });
                        
                        if (!optionExists) {
                            // Adicionar a nova opção com ID
                            const newOption = new Option(resultado.nome, resultado.id, true, true);
                            reclamadaSelect.append(newOption);
                        }
                        
                        // Forçar atualização do Select2 com o ID correto
                        reclamadaSelect.val(resultado.id).trigger('change.select2');
                        
                        // Aguardar um pouco para garantir que o Select2 atualizou
                        await new Promise(resolve => setTimeout(resolve, 100));
                    } catch (error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Erro!',
                            text: 'Erro ao criar reclamada: ' + error.message
                        });
                        submitBtn.innerHTML = originalText;
                        submitBtn.disabled = false;
                        return;
                    }
                }

                // Garantir que os valores finais estão corretos nos selects
                reclamanteSelect.val(reclamanteIdFinal).trigger('change.select2');
                reclamadaSelect.val(reclamadaIdFinal).trigger('change.select2');

                // Aguardar um pouco para o Select2 atualizar completamente
                await new Promise(resolve => setTimeout(resolve, 200));

                // Obter os valores finais novamente dos selects (garantir que estão atualizados)
                let reclamanteIdFinalVerificado = reclamanteSelect.val();
                let reclamadaIdFinalVerificado = reclamadaSelect.val();
                
                // Se for array, pegar o primeiro valor
                if (Array.isArray(reclamanteIdFinalVerificado)) {
                    reclamanteIdFinalVerificado = reclamanteIdFinalVerificado[0];
                }
                if (Array.isArray(reclamadaIdFinalVerificado)) {
                    reclamadaIdFinalVerificado = reclamadaIdFinalVerificado[0];
                }

                const formData = new FormData(form);
                
                // Garantir que os IDs corretos estão no formData (não o texto)
                // Converter para número para garantir que é um ID válido
                const reclamanteIdNum = parseInt(reclamanteIdFinalVerificado);
                const reclamadaIdNum = parseInt(reclamadaIdFinalVerificado);
                
                if (isNaN(reclamanteIdNum) || isNaN(reclamadaIdNum)) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Erro!',
                        text: 'Erro ao processar Reclamante ou Reclamada. Por favor, selecione valores válidos.'
                    });
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                    return;
                }
                
                // Substituir os valores no formData com os IDs numéricos corretos
                formData.set('reclamante_id', reclamanteIdNum);
                formData.set('reclamada_id', reclamadaIdNum);
                
                const isEdit = !!form.querySelector('input[name="id"]');
                const url = window.DOMAIN + (isEdit ? '/quesitos/editar/save' : '/quesitos/add/save');

                const response = await fetch(url, {
                    method: 'POST',
                    body: formData
                });
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Sucesso!',
                        text: data.message,
                        timer: 2000,
                        showConfirmButton: false
                    }).then(() => {
                        window.location.href = window.DOMAIN + '/quesitos';
                    });
                } else {
                    console.error('Erro do servidor:', data);
                    Swal.fire({
                        icon: 'error',
                        title: 'Erro!',
                        text: data.message || 'Erro ao salvar o quesito. Verifique o console para mais detalhes.'
                    });
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }
            } catch (error) {
                console.error('Erro na requisição:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Erro!',
                    text: 'Ocorreu um erro ao salvar o quesito. Verifique o console do navegador (F12) para mais detalhes.'
                });
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }
        });
    })();
</script>
{% endblock %}

